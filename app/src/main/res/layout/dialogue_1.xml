<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:paddingTop="30dp"
        android:paddingRight="32dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="gm/ltr "
            android:layout_below="@+id/blood_text"
            android:id="@+id/blood_edittext"
            android:maxLines="1"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Level Sugar"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="299dp"
            android:layout_below="@+id/title"
            android:id="@+id/blood_text"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Reading"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="299dp"
            android:id="@+id/title"
            android:textSize="24dp"
            android:paddingBottom="5dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="gm of carbohydrates"
            android:layout_below="@+id/food_text"
            android:id="@+id/food_edit"
            android:maxLines="1"
            android:inputType="text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:id="@+id/food_text"
            android:layout_below="@+id/blood_edittext"
            />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_below="@id/food_edit"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_below="@id/food_edit"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            style="?attr/materialButtonOutlinedStyle"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>